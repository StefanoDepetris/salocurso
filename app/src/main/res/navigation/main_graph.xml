<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.salo.ui.movie.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetaildFragment"
            app:destination="@id/movieDetaildFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetaildFragment"
        android:name="com.example.salo.ui.moviedetails.MovieDetaildFragment"
        android:label="fragment_movie_detaild"
        tools:layout="@layout/fragment_movie_detaild" >
        <argument
            android:name="posterImageUrl"
            app:argType="string" />
        <argument
            android:name="backGroundImageUrl"
            app:argType="string" />
        <argument
            android:name="voteAverage"
            app:argType="float" />
        <argument
            android:name="voteCount"
            app:argType="integer" />
        <argument
            android:name="overview"
            app:argType="string" />
        <argument
            android:name="tittle"
            app:argType="string" />
        <argument
            android:name="language"
            app:argType="string" />
        <argument
            android:name="releaseDate"
            app:argType="string" />
    </fragment>
</navigation>